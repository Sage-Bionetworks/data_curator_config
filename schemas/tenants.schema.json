{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "tenants": {
      "type": "array",
      "items": {"$ref": "#/$defs/tenant" }
    }
  },
  "$defs": {
    "tenant": {
      "type": "object",
      "required": [ "name", "synapse_asset_view", "config_location" ],
      "properties": {
        "name": {
          "type": "string"
        },
        "synapse_asset_view": {
          "type": "string",
            "pattern": "^syn[0-9]+$"
        },
          "config_location": {
            "type": "string",
            "pattern": "^(dcc|test).+\\.json$"
        }
      }
    }
  }
}
